<%- include('partials_head') %>    

<h1 class= "heading mb-4">Blog Articles</h1>    
<a href = "/articles/new" class= "btn btn-success">Create new Articles</a>

<% articles.forEach(article =>{ %>
    
    <div class =  "card mt-4">
        <div class = "card-header">
            <h4 class = "card-title"><%= article.title %></h4>
            <div class = "card-subtitle text-muted mb-2" >
                Posted on: <%= article.createdAt.toLocaleDateString() %>        
            </div>
            <div class= "card-body">
                <div class = "card-text mb-2"><%= article.description %>
                </div>
                <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                    <a href = "articles/<%= article.slug %>" class = "btn btn-outline-primary">View</a>
                    
                    <a href = "articles/edit/<%= article.id %>" class = "btn btn-outline-info">Edit</a>
                    
                    <form action ="/articles/<%= article.id %>?_method=DELETE" method = "POST" >
                        <button type =  "submit" class = "btn btn-outline-danger">Delete</button>
                    </form>
                </div>
                
            </div>
        </div>
    </div>
    
    <%}) %>
</div>

</body>
</html>